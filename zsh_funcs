}

function xb_ws_delete() {
    curl -X DELETE http://$1.localhost:6001$2 \
        -d $3 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
        --silent | jq
}

function xb_get() {
    curl -X GET http://localhost:6001$1 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
        --silent | jq
}

