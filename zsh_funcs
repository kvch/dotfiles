function list_lost() {
    git reflog |  awk '{ print $1 }' | xargs gitk
}

function add_remote() {
    git remote add $2 http://github.com/$2/$1.git
    git fetch $2
}

function update_master() {
    git stash
    git checkout main
    git fetch upstream
    git reset --hard upstream/main
}

function load_env() {
    export $(cat $XATA_HOME/.env | xargs)
}

function xb_post() {
    curl -X POST http://localhost:6001$1 \
        -d $2 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
        --silent | jq
}

function xb_put() {
    curl -X PUT http://localhost:6001$1 \
        -d $2 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
        --silent | jq
}

function xb_ws_put() {
    curl -X PUT http://$1.localhost:6001$2 \
        -d $3 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
        --silent | jq
}

function xb_ws_post() {
    curl -X POST http://$1.localhost:6001$2 \
        -d $3 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
        --silent | jq
}

function xb_ws_patch() {
    curl -X PATCH http://$1.localhost:6001$2 \
        -d $3 \
        -H "Authorization: Bearer ${XATA_API_KEY}" \
        -H 'Accept: application/json' \
        -H 'Content-Type: application/json' \
